{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["poetry"],
  "packageRules": [
    {
      "ignorePaths": "pyproject.toml",
      "poetry": {
        "fileMatch": ["{{ cookiecutter.name }}/pyproject.toml"]
      },
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
